extends layout/base.pug

block content
    .row
        form.col-md-4.col-md-offset-4.create_register_for(method="post" name="form1" action="#" enctype="multipart/form-data")
            h2.register_title Авторизация
            .form-group
                input.form-control(type="text" name="_username" placeholder="Login")
            .form-group
                input.form-control(type="password" name="_password" placeholder="Пароль")
            .form-group.form_submit
                input.btn.btn-success.register_button(type="submit" name="save" value="Авторизация")
            .form-group.form_submit
                a.btn.btn-primary.register_button(href="register.html") Регистрация
