{% extends '@App/Note/base_note.html.twig' %}

{% block note_form %}
    {{ form_start(form) }}
    {{ form_errors(form) }}

    <h2 style="text-align: center;">Просмотр Заметки</h2>

    <div class="form-group create_note">
        {{ form_errors(form.title) }}
        {{ form_row(form.title) }}
    </div>

    <div class="form-group">
        {{ form_errors(form.text) }}
        {{ form_row(form.text) }}
    </div>

    <h2 style="text-align: center;">Размещение заметки</h2>
    <div class="form-group">
        {{ form_errors(form.category) }}
        {{ form_row(form.category) }}
    </div>

    <div class="form-group">
        {{ form_errors(form.importance) }}
        {{ form_row(form.importance) }}
    </div>

    <div class="form-group form_submit">
        <input class="btn btn-success btn-block" name="save" type="submit" value="Сохранить" placeholder="Сохранить"/>
    </div>

    <div class="form-group form_submit">
        <a class="btn btn-success btn-block" href="{{ path('notes_manager.note.list_by_category_and_note', { id: note.id }) }}">Перейти к списку</a>
    </div>
    {{ form_end(form) }}
{% endblock %}