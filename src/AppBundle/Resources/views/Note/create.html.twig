{% extends 'base.html.twig' %}

{% block main %}
    <div class="row">
        {{ form_start(form) }}
            {{ form_errors(form) }}

            <h2 style="text-align: center;">Создать Заметку</h2>

            <div class="form-group create_note">
                {{ form_errors(form.title) }}
                {{ form_row(form.title) }}
            </div>

            <div class="form-group">
                {{ form_errors(form.text) }}
                {{ form_row(form.text) }}
            </div>

            <h2 style="text-align: center;">Размещение заметки</h2>
            <div class="form-group">
                {{ form_errors(form.category) }}
                {{ form_row(form.category) }}
            </div>

            <div class="form-group">
                {{ form_errors(form.noteLabel) }}
                {{ form_row(form.noteLabel) }}
            </div>

            <div class="form-group form_submit">
                <input class="btn btn-success btn-block" name="save" type="submit" value="Сохранить заметку" placeholder="Сохранить заметку"/>
            </div>
        {{ form_end(form) }}
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
      $('#note_text').wysihtml5({
        toolbar: {
          "font-styles": false, //Font styling, e.g. h1, h2, etc. Default true
          "emphasis": false, //Italics, bold, etc. Default true
          "lists": true, //(Un)ordered lists, e.g. Bullets, Numbers. Default true
          "html": false, //Button which allows you to edit the generated HTML. Default false
          "link": true, //Button to insert a link. Default true
          "image": true, //Button to insert an image. Default true,
          "color": false, //Button to change color of font
          "blockquote": true, //Blockquote
        }
      });
    </script>
{% endblock %}
