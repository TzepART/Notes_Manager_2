{% extends '@App/Circle/base_circle.html.twig' %}

{% block form_block %}
    <div class="row">
        {{ form_start(form) }}
            <h2 style="text-align: center;">Создание окружности</h2>
            {% if form_errors(form) is not empty %}
                <div class="form-group">
                    {{ form_errors(form) }}
                </div>
            {% endif %}
            <div class="form-group create_circle">
                {{ form_errors(form.name) }}
                {{ form_widget(form.name) }}
            </div>
            <div class="form-group">
                {{ form_errors(form.countLayer) }}
                {{ form_widget(form.countLayer) }}
            </div>

            <h2 style="text-align: center;">Создать секторы</h2>
            <ul class="tags" data-prototype="{{ form_widget(form.sectors.vars.prototype)|e('html_attr') }}">
            </ul>

            <div class="form-group form_submit">
                <a class="btn btn-primary btn-block" onclick="return addField()" href="#">Добавить сектор</a>
                <input class="btn btn-success btn-block" name="save" value="Создать окружность" type="submit"/>
            </div>
        {{ form_end(form) }}
    </div>
{% endblock %}
